{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "./build.sh Debug",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "./build.sh Release"
    },
    {
      "label": "Run Unit Tests",
      "type": "shell",
      "command": "./build.sh test",
      "group": "test"
    }
  ]
}